@using MvcStok.Models.Entity
@model List<TBLMUSTERILER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
            {

    <p>
        <b>Aranacak Müşteri Adı:</b> @Html.TextBox("P")
        <input type="submit" value="ARA" />

    </p>
            }
<table class="table table-bordered">
    <tr>
        <th>Müsteri Id</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyad</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Alert</th>
    </tr>

    <tbody>

        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MUSTERIID</th>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTON", "SIL", new { id = mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten silmek istiyor musunz?')" }) </tr>
            }

    </tbody>
</table>
<br />
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENI MÜŞTERİ EKLE</a>


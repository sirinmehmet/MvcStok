
@using MvcStok.Models.Entity
@model List<TBLURUNLER>



@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>URUN ID</th>
            <th>URUN ADI</th>
            <th>MARKASI</th>
            <th>KATEGORİ</th>
            <th>FİYAT</th>
            <th>STOK</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>



        </tr>
    </thead>
    <tbody>
       
            @foreach (var urn in Model)
            {
                <tr>
                    <th>@urn.URUNID</th>
                    <td>@urn.URUNAD</td>
                    <td>@urn.MARKA</td>
                    <td>@urn.TBLKATEGORILER.KATEGORIAD</td>
                    <td>@urn.FIYAT</td>
                    <td>@urn.STOK</td>
                    <td><a href="/URUN/SILL/@urn.URUNID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/URUN/UrunGetir/@urn.URUNID" class="btn btn-success">GÜNCELLE</a></td>
                    <td>
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#Modal1">Modal Guncelle</button>

                        </td>

                </tr>

            }
        </tbody>
</table>

<a href="/URUN/UrunEkle/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>
<script type="text/javascript" src="https://cdn.datatables.net/1.10.22/js/jquery.dataTables.min.js"></script>
<link href="~/Content/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />

<script>
    $('#tbl1').DataTable();
</script>



@using (Html.BeginForm("Guncelle", "Urun", FormMethod.Post))
{
    <div class="modal" id="Modal1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title">Ürün Güncelleme Ekranı</h2>
                </div>
                <form>
                    <div class="modal-body">

                       
                      

                        <br />
                        <br />

                    </div>
                </form>
            </div>
        </div>
    </div>

}



